<?xml version="1.0"?>
<fop version="1.0">
  <base>file:///usr/local/tomcat/aplikacja1/Allios/fop-config/</base>
  <font-base>file:///usr/local/tomcat/aplikacja1/Allios/fop-config/</font-base>
  <source-resolution>600</source-resolution>
  <target-resolution>600</target-resolution>
  <default-page-settings height="29.7cm" width="21cm"/>
  <renderers>
    <renderer mime="application/pdf">
      <filterList>
        <value>flate</value>
      </filterList>
      	<fonts>
		<font metrics-url="fonts/Tahomal.xml" kerning="yes" embed-url="fonts/tahoma.ttf">
			<font-triplet name="Tahomal" style="normal" weight="normal"/>
		</font>
		<font metrics-url="fonts/TahomalBD.xml" kerning="yes" embed-url="fonts/tahomabd.ttf">
			<font-triplet  name="TahomalBD" style="normal" weight="normal"/>
		</font>
	</fonts>
    </renderer>

    <renderer mime="application/postscript"/>
    <renderer mime="application/vnd.hp-PCL"/>

    <renderer mime="image/svg+xml">
      <format type="paginated"/>
      <link value="true"/>
      <strokeText value="false"/>
    </renderer>

    <renderer mime="application/awt"/>

    <renderer mime="image/png"/>

    <renderer mime="image/tiff/">
    </renderer>

    <renderer mime="text/xml"/>

    <renderer mime="text/plain">
      <pageSize columns="80"/>
    </renderer>

  </renderers>

</fop>
 